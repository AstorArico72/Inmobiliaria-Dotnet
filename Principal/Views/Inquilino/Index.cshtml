@model List<Inquilino>;
@{
    ViewData["Title"] = "Central de Inquilinos";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        @Model.Count() inquilinos registrados. <br>
        <a asp-action="Nuevo"> <button class="btn btn-success"> Registrar inquilino </button> </a>
    </p>
    <table class="table primary">
        <thead>
            <th>#</th>
            <th>Nombre</th>
        </thead>
        @foreach (var item in Model) {
            <tr>
                <td>@item.ID</td>
                <td><a asp-action="Detalles" asp-route-id= "@item.ID">@item.Nombre</a></td>
            </tr>
        }
    </table>
</div>
