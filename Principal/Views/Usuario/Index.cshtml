@model List<Usuario>;
@{
    ViewData["Title"] = "Central de Usuarios";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        Los usuarios registrados en Ã©sta webapp <br>
        <a asp-action="Nuevo">Nuevo usuario</a>
    </p>
    <table class="table primary">
        <thead>
            <th>#</th>
            <th>Foto</th>
            <th>Nombre</th>
            <th>Rol</th>
        </thead>
        @foreach (var item in Model) {
            <tr class="text-center">
                <td>@item.ID</td>
                <td> <img src="@item.URLFoto" class="img-thumbnail" width="128" height="128"> </td>
                <td>@item.NombreUsuario</td>
                <td>@item.Rol</td>
            @if (item.Rol != "Admin") {
                <td><a class="text-danger" asp-action="Borrar" asp-route-id="@item.ID">Borrar</a> </td>
            } else {
                <td>No puede borrarse </td>
            }
            </tr>
        }
    </table>
</div>
